<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bold_blue"/> <!-- Green color -->
            <stroke android:width="2dp" android:color="@color/bold_blue"/> <!-- Blue border -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F2F2F2"/> <!-- White color -->
        </shape>
    </item>
</selector>